{% extends 'base.html.twig' %}

{% block title %}Contest{% endblock %}

{% block titreH1 %}Liste des parties{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DÃ©but</th>
                <th>Jeu</th>
                <th>Participants</th>
                <th>Vainqueur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contest in contests %}
            <tr>
                <td>{{ contest.id }}</td>
                <td>{{ contest.startDate|date('d-m-Y') }}</td>
